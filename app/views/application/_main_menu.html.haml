%ul
  %li{:class => current_page?(:controller => 'home', :action => 'index') ? 'active' : ''}
    %span.title= link_to_unless_current("Dashboard", { :controller => 'home', :action => "index" })
    %br/
    %span.sub_info#newpostscount

  %li{:class => current_page?(:controller => 'projects', :action => 'index') ? 'active' : ''}
    %span.title= link_to_unless_current("Projects", { :controller => 'projects', :action => "index" })
    %br/
    %span.sub_info

  -if current_user.admin? || current_user.project_manager?
 
    %li{:class => current_page?(:controller => 'monitoring', :action => 'index') ? 'active' : ''}
      %span.title= link_to_unless_current("Monitoring", { :controller => 'monitoring', :action => "index" }) 
      %br/
      %span.sub_info

    %li{:class => current_page?(:controller => 'clients', :action => 'index') ? 'active' : ''}
      %span.title= link_to_unless_current("Clients", { :controller => 'clients', :action => "index" })
      %br/
      %span.sub_info   

  %li{:class => current_page?(:controller => 'hours', :action => 'index') ? 'active' : ''}
    %span.title= link_to_unless_current("Timetracking", { :controller => 'hours', :action => "index" }) 
    %br/
    %span.sub_info
      = "<span id='mydailyhours'>#{current_user.hours_today}</span> hours today".html_safe
  %li{:class => current_page?(:controller => 'profiles', :action => 'index') ? 'active' : ''}
    %span.title= link_to_unless_current("Contacts", { :controller => 'profiles', :action => "index" })
    %br/
    %span.sub_info
