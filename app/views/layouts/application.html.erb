<!DOCTYPE html>
<html>
<head>
  <title>Intranet</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  	<div id="container">
  	  	  	<div id="topline">
			
			<div id="login_menu">
				<% if user_signed_in? %>
					<div id="avatar">
		  				<%= image_tag ('dummy_user.jpg'), :title => 'dummy' %>
		  			</div>
		  			<div id="userinfo">
		  				<span class="username">
		  					Thomas
		  				</span><br/>
		  				<span id="mails">
		  					2 new mails
		  				</span>
		  			</div>
					
				<% else %>
					<%= link_to 'Login', new_user_session_url %> |
					<%= link_to 'Register', new_user_registration_url %>
				<% end %>

			</div>
				

  			
  			<div id="toolbar">
  				<div id="settings">
  					<a title="settings" id="settings_link" href="javascript:void(0);"></a>
  				</div>
  				<div id="logout">
  					<%= link_to "", destroy_user_session_url,  :id => 'logout_link', :method => :delete %>
  				</div>
  				
  			</div>
  		
  		</div>
  		
  		
  		<div id="main_menu">
  			<%= render 'main_menu' %>
  		</div>
  		
  	
  		<div id="content">
  			<p class="notice"><%= notice %></p>
	        <p class="alert"><%= alert %></p>
  			<div id="headline">
  			
  			</div>
  			
  			<%= yield %>
			

  		
	
		</div>
  	
  	
  	</div>  
 </body>
  
</html>

