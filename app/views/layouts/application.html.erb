<!DOCTYPE html>
<html>
<head>
  <title>Intranet</title>
  <%= stylesheet_link_tag    "application" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	
  	<div id="container">
  	  	  	<div id="topline">
			
			<div id="login_menu">
				<% if user_signed_in? %>
					<div id="avatar">
		  				<%= current_user.profile.avatar.url.present? ? image_tag(current_user.profile.avatar.url(:thumb)) : image_tag("dummy_user.jpg") %>
		  			</div>
		  			<div id="userinfo">
		  				<span class="username">
		  					<%= link_to current_user.username, profile_path(Profile.find_by_user_id(current_user.id)) %>
		  				</span><br/>
		  				<span id="mails">
		  					no new mails
		  				</span>
		  			</div>
					
				<% else %>
					<span class="not_logged_in">
						<%= link_to 'Login', new_user_session_url, :title => "Login" %> |
						<%= link_to 'Register', new_user_registration_url, :title => "Register" %>
					</span>
				<% end %>

			</div>
				

  			<% if user_signed_in? %>
  			<div id="toolbar">
  				<div id="settings">
  					<%= link_to "", "/",  :id => 'settings_link', :title => "Settings" %>
  				</div>
  				<div id="logout">
  					<%= link_to "", destroy_user_session_url,  :id => 'logout_link', :method => :delete, :title => "Logout" %>
  				</div>
  				
  			</div>
  			<% end %>
  		</div>
  		
  		
  		<div id="main_menu">
  			<%= render 'main_menu' if current_user %>
  		</div>
  		
  	
  		<div id="content">
		<div id="loading">Loading...</div>
			<% if notice %>
  				<p id="flash_notice"><%= notice %></p>
			<% end %>
			<% if alert %>
	        	<p id="flash_alert"><%= alert %></p>
			<% end %>
	
  			<div id="yield">
  				<%= yield %>
			</div>
			

  		
	
		</div>
  	
  	
  	</div>  
<% d { current_user } %>
 </body>
  
</html>

