%h1 Projects

#scrolldiv
  .content_window.fullsize
    .headline
      .searchform
        = form_tag projects_path, :method => :get
        %p
          = text_field_tag :search, params[:search], :class => "table_search", :onfocus => 'this.select();'
          = submit_tag "Search", :name => nil
      %br.clear
    .inner
      %table.pretty
        %tr
          %th Nr
          %th Name
          %th Client
          %th Description
          %th Status
          %th
          %th
          %th
        
        - @projects.each do |project|
          %tr
            %td= link_to project.nr, project, :class => "blue"
            %td= link_to project.name, project, :class => "blue"
            %td= link_to project.client.name, project.client, :class => 'blue'
            %td= markdown(project.description)[0..29] + "..."
            %td= project.project_status.name
            %td= link_to image_tag('zoom_in.png'), project, :title => 'details'
            %td= link_to image_tag('edit.png'), edit_project_path(project), :title => 'edit'
            %td= link_to image_tag('delete.png'), project, :title => 'delete', :confirm => 'Are you sure?', :method => :delete

      .paginator= paginate @projects
  					
    .edit_links
      = link_to 'New Project', new_project_path, :class => 'new_object_link'
  
%br

