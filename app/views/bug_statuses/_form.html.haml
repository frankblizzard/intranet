= simple_form_for @bug_status do |form|

  -if @bug_status.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@bug_status.errors.count, "error")} prohibited this #{BugStatus.name.titleize} from being saved:"
      %ul
        - @bug_status.errors.full_messages.each do |msg|
          %li= msg  

  = form.input :name, :label => 'Name'

  .actions
    = form.button :submit