.comment
	.author
		.comment_avatar= comment.user.profile.avatar.url.present? ? image_tag(comment.user.profile.avatar.url(:thumb)) : image_tag("dummy_user.jpg")
		.userinfo
			%span.username= link_to comment.user.username, comment.user.profile
			%br
			%span.time= comment.created_at.strftime('%d.%m.%y')
			%br
			%span.time= comment.created_at.strftime('%H:%M')

	.comment_body= markdown(comment.content)
					
	%br.clear
