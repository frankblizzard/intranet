= simple_form_for @comment do |form|

  -if @comment.errors.any?
    #errorExplanation
      %h2= "#{pluralize(@comment.errors.count, "error")} prohibited this #{Comment.name.titleize} from being saved:"
      %ul
        - @comment.errors.full_messages.each do |msg|
          %li= msg  

  = form.input :content, :label => 'Content'
  = form.input :commentable_id, :label => 'Commentable'
  = form.input :commentable_type, :label => 'Commentable Type'

  .actions
    = form.button :submit